import 'dart:convert';
import 'package:flutter/services.dart';
import 'package:get/get.dart';

class AppTranslations extends Translations {
  static Map<String, Map<String, String>> _translations = {};

  @override
  Map<String, Map<String, String>> get keys => _translations;

  /// Cargar JSONs desde assets
  static Future<void> load() async {    
    final es = await rootBundle.loadString('assets/lang/es_ES.json');
    final en = await rootBundle.loadString('assets/lang/en_US.json');

    _translations = {
      'es_ES': Map<String, String>.from(json.decode(es)),
      'en_US': Map<String, String>.from(json.decode(en)),
    };
  }
}